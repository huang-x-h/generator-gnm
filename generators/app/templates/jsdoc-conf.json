{
  "source": {
    "include": ["README.md", "package.json", "index.js"]
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "template": "./node_modules/ink-docstrap/template",
    "destination": "./doc/",
    "recurse": true,
    "verbose": true,
    "encoding": "utf8",
    "readme": "./README.md",
    "package": "./package.json"
  },
  "templates": {
    "copyright": "<%= moduleName %> Copyright Â© 2016-2017 <%= fullName %>.",
    "outputSourceFiles": false,
    "systemName": "<%= moduleName %>",
    "theme": "lumen",
    "search": false
  }
}
